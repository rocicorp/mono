{
  "compilerOptions": {
    "target": "es2022",
    "module": "Node16",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "moduleDetection": "force",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declarationMap": true,
    "sourceMap": true,
    "declaration": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "preserveSymlinks": true,
    "types": [],
    "resolveJsonModule": true,
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": "./packages/",
    "paths": {
      "@rocicorp/zero": ["zero/src/zero.ts"],
      "@rocicorp/zero/react": ["zero/src/react.ts"],

      "btree": ["btree/b+tree.ts"],
      "datadog/src/*": ["datadog/src/*"],
      "replicache/src/*": ["replicache/src/*"],
      "shared/src/*": ["shared/src/*"],
      "zero-client/src/*": ["zero-client/src/*"],
      "zero-protocol/src/*": ["zero-protocol/src/*"],
      "zero-react/src/*": ["zero-react/src/*"],
      "zql/src/*": ["zql/src/*"]
    }
  }
}
