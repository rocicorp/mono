{
  "name": "zbugs",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsx ./zero.config.ts && tsc && vite build",
    "check-types": "tsc --noEmit && tsc --noEmit -p tsconfig.node.json",
    "format": "prettier --write './**/*.{js,jsx,json,ts,tsx,html,css,md}'",
    "check-format": "prettier --check './**/*.{js,jsx,json,ts,tsx,html,css,md}'",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx src/",
    "preview": "vite preview",
    "zero": "tsx ./zero.config.ts && cd ../../packages/zero-cache && ZERO_CONFIG_PATH=\"../../apps/zbugs/zero.config.json\" npm run start -- dotenv_config_path=../../apps/zbugs/.env"
  },
  "dependencies": {
    "@fastify/cookie": "^10.0.0",
    "@fastify/oauth2": "^8.0.0",
    "@octokit/core": "^6.1.2",
    "@schickling/fps-meter": "^0.1.2",
    "classnames": "^2.5.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "jose": "^5.9.3",
    "nanoid": "^4.0.2",
    "postgres": "^3.4.4",
    "react": ">=16.0 <19.0",
    "react-dom": ">=16.0 <19.0",
    "react-markdown": "^9.0.1",
    "react-textarea-autosize": "^8.5.3",
    "react-window": "^1.8.10",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "wouter": "^3.3.5",
    "zero-cache": "0.0.0",
    "zero-client": "0.0.0",
    "zero-react": "0.0.0"
  },
  "devDependencies": {
    "@rocicorp/eslint-config": "^0.5.1",
    "@rocicorp/prettier-config": "^0.2.0",
    "@tailwindcss/forms": "^0.5.0",
    "@types/k6": "^0.53.2",
    "@types/node": "^18.16.0",
    "@types/react": "18.2.13",
    "@types/react-dom": "18.2.6",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.0.23",
    "tsx": "^4.19.1",
    "typescript": "^5.5.3",
    "universal-user-agent": "^7.0.2",
    "vite": "^5.2.0",
    "vite-plugin-svgr": "^4.2.0"
  },
  "eslintConfig": {
    "extends": [
      "@rocicorp/eslint-config"
    ]
  },
  "prettier": "@rocicorp/prettier-config"
}
