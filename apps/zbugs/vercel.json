{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/p/:projectName/issue/:issueId",
      "destination": "/api/p/:projectName/issue/:issueId"
    },
    {
      "source": "/p/:path*",
      "destination": "/api/p/:path*"
    },
    {
      "source": "/issue/(.*)",
      "destination": "/index.html"
    }
  ]
}
