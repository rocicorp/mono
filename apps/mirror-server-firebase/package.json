{
  "name": "mirror-server-firebase",
  "scripts": {
    "build:dev": "rimraf ./lib/**/* && tsc --watch",
    "build": "rimraf ./lib/**/* && npm run lint && rollup -c rollup.config.js",
    "serve:dev": "firebase emulators:start --only functions",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run build && npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "format": "prettier --write *",
    "check-format": "prettier --check *",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx src/"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^11.9.0",
    "firebase-functions": "^4.4.0",
    "helmet": "^7.0.0",
    "multer": "^1.4.5-lts.1",
    "tslib": "^2.5.2"
  },
  "devDependencies": {
    "@rocicorp/eslint-config": "^0.4.1",
    "@rocicorp/prettier-config": "^0.1.1",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/multer": "^1.4.7",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "rollup": "^3.23.0",
    "rollup-plugin-dts": "^5.2.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "private": true,
  "engines": {
    "node": "18"
  },
  "eslintConfig": {
    "extends": "@rocicorp/eslint-config"
  },
  "prettier": "@rocicorp/prettier-config",
  "type": "module"
}
