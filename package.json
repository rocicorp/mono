{
  "name": "@rocicorp/mono",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "mirror/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "check-format": "turbo run check-format",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.0.3",
    "@rocicorp/eslint-config": "^0.5.1",
    "@rocicorp/prettier-config": "^0.2.0",
    "syncpack": "^9.8.4",
    "turbo": "^1.10.3"
  },
  "eslintConfig": {
    "extends": "@rocicorp/eslint-config"
  },
  "prettier": "@rocicorp/prettier-config",
  "syncpack": {
    "versionGroups": [
      {
        "dependencies": [
          "@cloudflare/workers-types"
        ],
        "packages": [
          "mirror-cli",
          "mirror-workers",
          "zero-cache"
        ],
        "label": "TODO: Move reflect packages to 4.x.x"
      }
    ]
  }
}
