{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "es2022",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}