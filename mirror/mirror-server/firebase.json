{
  "functions": {
    "predeploy": ["npm run build", "node tool/process-deps.js --remove"],
    "postdeploy": ["node tool/process-deps.js --restore"],
    "source": "./",
    "ignore": [
      "firebase.json",
      "**/node_modules/**",
      ".git",
      "tsconfig.tsbuildinfo",
      "ui-debug.log"
    ]
  },
  "hosting": {
    "public": "hosting",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "redirects": [
      {
        "source": "*",
        "destination": "https://hello.reflect.net/",
        "type": 302
      }
    ],
    "rewrites": [
      {
        "source": "/v1/apps/**",
        "function": {
          "functionId": "api-apps"
        }
      }
    ]
  },
  "emulators": {
    "hub": {
      "port": 4400
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080,
      "websocketPort": 9150
    },
    "singleProjectMode": true
  }
}
