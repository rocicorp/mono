{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./out",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "types": ["node"],
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src/**/*", "tool/**/*"],
  "exclude": ["node_modules", "out", "dist"]
}
